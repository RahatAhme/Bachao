<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    >


    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mr.X"
        android:textColor="@color/black"
        android:fontFamily="@font/mon_bold"
        android:textSize="20sp"
        android:layout_marginStart="15dp"
        android:id="@+id/nameInHOme"
        android:iconifiedByDefault="false"
        android:layout_marginLeft="15dp">

    </TextView>
    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_marginBottom="10dp"
        android:layout_margin="10dp"

        android:background="#DA9393"/>
    <android.support.v7.widget.CardView
        android:id="@+id/grid_card"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="550dp"
        android:orientation="horizontal"
        android:layout_gravity="center"

        app:cardBackgroundColor="#DDAFAF"
        >



    <GridLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="2"
        android:layout_gravity="center"
        android:rowCount="2"

        >

        <android.support.v7.widget.CardView


            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_marginBottom="1dp"
            android:layout_marginRight="1dp"
            android:clickable="true"
            android:focusable="true"
            app:cardBackgroundColor="#fff"
            android:foreground="?android:attr/selectableItemBackground"
           >


        <LinearLayout
            android:id="@+id/mapBtn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"

                android:layout_gravity="center_horizontal|center_vertical"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="top|center"
                    android:src="@drawable/map" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Find Help"
                    android:gravity="center"
                    android:layout_marginTop="15dp"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:textColor="#B31212"
                    android:fontFamily="@font/mon_bold"
                    android:textSize="18sp" />


        </LinearLayout>

        </android.support.v7.widget.CardView>



        <android.support.v7.widget.CardView

            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:clickable="true"
            android:focusable="true"
            app:cardBackgroundColor="#fff"
            android:layout_marginBottom="1dp"
            android:foreground="?android:attr/selectableItemBackground"
            >


            <LinearLayout
                android:id="@+id/emerBtn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:background="#88f56942"
                android:layout_gravity="center_horizontal|center_vertical"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center"
                    android:src="@drawable/emrgenycontac" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Emergency \nContact"
                    android:gravity="center"
                    android:layout_marginTop="15dp"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:textColor="#B31212"
                    android:fontFamily="@font/mon_bold"
                    android:textSize="18sp" />


            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView

            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_marginRight="1dp"
            app:cardBackgroundColor="#fff"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            >


            <LinearLayout
                android:id="@+id/complainId"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal|center_vertical"
                android:gravity="center"
                android:background="#88a3eb15"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/complainbox" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/mon_bold"
                    android:gravity="center"
                    android:text="Complain \nBox"
                    android:textAlignment="center"
                    android:textColor="#B31212"
                    android:textSize="18sp" />


            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView

            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            app:cardBackgroundColor="#FFFFFF"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            >


            <LinearLayout
                android:id="@+id/aboutId"
                android:background="#880fe4f7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal|center_vertical"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:src="@drawable/about_us_icon_png_13100" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/mon_bold"
                    android:gravity="center"
                    android:text="About \nUs"
                    android:textAlignment="center"
                    android:textColor="#B31212"
                    android:textSize="18sp" />


            </LinearLayout>

        </android.support.v7.widget.CardView>

    </GridLayout>


    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="bottom|right"
        android:padding="10dp"
        android:layout_gravity="bottom"
        >
        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_marginBottom="10dp"
            android:layout_margin="10dp"
            android:background="#DA9393"/>
    </LinearLayout>

</LinearLayout>